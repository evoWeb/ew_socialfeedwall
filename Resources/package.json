{
  "name": "evoweb-ewsocialfeedwall",
  "version": "0.0.1",
  "private": true,

  "dependencies": {
    "vue": "^2.3.3",
    "vue-resource": "^1.3.4"
  },

  "devDependencies": {
    "vue-cli": "^2.8.0",

    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-env": "^1.5.1",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "sass-loader": "^5.0.1",
    "style-loader": "^0.19.0",
    "vue-loader": "^12.1.0",
    "vue-template-compiler": "^2.3.3",
    "webpack": "^2.6.1",

    "node-sass": "latest",
    "csslint": "latest"
  },

  "scripts": {
    "node-sass": "node-sass --output-style compressed Private/Scss/TweetList.scss Public/Stylesheets/TweetList.min.css",
    "build:css": "npm run node-sass",

    "node-sass:dev": "node-sass --output-style expanded Private/Scss/TweetList.scss Public/Stylesheets/TweetList.css",
    "csslint": "csslint --quiet Public/Stylesheets/TweetList.css",
    "build:dev:css": "npm run node-sass:dev",

    "build:dev": "npm run build:dev:css",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules && npm run build:dev:css && npm run build:css",
    "dev": "cross-env NODE_ENV=development webpack --progress"
  }
}
